# D체sseldorf Appointment Checker - Environment Variables
# Copy this file to .env and fill in your actual values

# Application Environment
ENVIRONMENT=development  # development, staging, production

# Browser Configuration
HEADLESS=false  # Set to true for production
SLOW_MO=300     # Milliseconds delay between actions
DEBUG=true

# Screenshot Settings
SCREENSHOT_DIR=screenshots

# Website Configuration
BASE_URL=https://termine.duesseldorf.de/select2?md=3

# Default Service (can be overridden at runtime)
DEFAULT_CATEGORY="Umschreibung ausl채ndische Fahrerlaubnis / Dienstfahrerlaubnis"
DEFAULT_SERVICE="Umschreibung ausl채ndischer F체hrerschein (sonstige Staaten)"
DEFAULT_QUANTITY=1

# Telegram Bot Configuration (for future implementation)
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_ADMIN_ID=your_telegram_user_id_here

# Database Configuration
DB_TYPE=sqlite
DB_PATH=appointments.db

# For PostgreSQL (uncomment and configure when needed)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=termin_checker
# DB_USER=postgres
# DB_PASSWORD=your_password_here

# Scheduler Settings
CHECK_INTERVAL_HOURS=1
MIN_CHECK_INTERVAL_MINUTES=15

# Notification Settings
NOTIFY_ON_FOUND=true
NOTIFY_ON_ERROR=false
INCLUDE_SCREENSHOT=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=appointment_checker.log

# Rate Limiting
RATE_LIMIT_ENABLED=true
REQUESTS_PER_HOUR=20
DELAY_BETWEEN_CHECKS_SECONDS=180

# Security (for production)
# SECRET_KEY=your_secret_key_here
# API_KEY=your_api_key_here
